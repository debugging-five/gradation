<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<insert id="insert" parameterType="userVO">
		INSERT INTO TBL_USER
		VALUES (
			SEQ_USER.NEXTVAL,
			'default_name',
			'default_path',
			#{userName},
			#{userEmail},
			#{userId},
			#{userPassword},
			#{userPhone},
			#{userNickName},
			#{userAddress},
			#{userPostalCode},
			#{userSnsOk},
			#{userMailOk},
			#{userAgreementOk},
			#{userIntroduce},
			#{userRecode},
			#{userInstagram},
			#{userYoutube},
			#{userBlog},
			#{userKakao},
			#{userKakao},
			#{userNaver},
			0,
			0,
			0,
			'')
	</insert>
	
	<select id="selectByEmailAndPassword" parameterType="MemberVO" resultType="String">
		SELECT MEMBER_EMAIL
		FROM TBL_MEMBER
		WHERE MEMBER_EMAIL = #{memberEmail} AND MEMBER_PASSWORD = #{memberPassword}
	</select>
	
	<select id="selectByEmail" parameterType="String" resultType="MemberVO">
		SELECT ID, MEMBER_EMAIL, MEMBER_PASSWORD, MEMBER_NAME
		FROM TBL_MEMBER
		WHERE MEMBER_EMAIL = #{memberEmail}
	</select>
	
</mapper>
