<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>gradation</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>UserFrontController</servlet-name>
    <servlet-class>com.app.user.UserFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserFrontController</servlet-name>
    <url-pattern>*.user</url-pattern>
  </servlet-mapping>
  
  <!-- main -->
  <servlet>
    <servlet-name>MainFrontController</servlet-name>
    <servlet-class>com.app.main.MainFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainFrontController</servlet-name>
    <url-pattern>*.main</url-pattern>
  </servlet-mapping>
  
  <!-- Header -->
  <servlet>
    <servlet-name>HeaderFrontController</servlet-name>
    <servlet-class>com.app.header.HeaderFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HeaderFrontController</servlet-name>
    <url-pattern>*.header</url-pattern>
  </servlet-mapping>
  
  <!-- display -->
  <servlet>
  	<servlet-name>DisplayFrontController</servlet-name>
	<servlet-class>com.app.display.DisplayFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayFrontController</servlet-name>
    <url-pattern>*.display</url-pattern>
  </servlet-mapping>
  
  <!-- auction -->
  <servlet>
  	<servlet-name>AuctionFrontController</servlet-name>
	<servlet-class>com.app.auction.AuctionFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuctionFrontController</servlet-name>
    <url-pattern>*.auction</url-pattern>
  </servlet-mapping>
  
  <!-- upcycling -->
  <servlet>
  	<servlet-name>UpcyclingFrontController</servlet-name>
	<servlet-class>com.app.upcycling.UpcyclingFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuctionFrontController</servlet-name>
    <url-pattern>*.upcycling</url-pattern>
  </servlet-mapping>

<!-- mypage -->  
  <servlet>
  	<servlet-name>MypageFrontController</servlet-name>
	<servlet-class>com.app.mypage.MypageFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MypageFrontController</servlet-name>
    <url-pattern>*.mypage</url-pattern>
  </servlet-mapping>
  
</web-app>